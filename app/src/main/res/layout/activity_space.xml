<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.myspace.Space">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illia Kuchko"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="false"
            android:src="@drawable/profile"
            android:adjustViewBounds="true"
            android:maxHeight="175dp"
            android:maxWidth="175dp"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:layout_column="0" />

        <RelativeLayout
            android:layout_width="193dp"
            android:layout_height="178dp"
            android:layout_row="1"
            android:layout_column="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="34dp"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 years old"
                android:id="@+id/textView3"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portland, OREGON"
                android:id="@+id/textView4"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="United States"
                android:id="@+id/textView5"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Login:"
                android:id="@+id/textView6"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/14/2016"
                android:id="@+id/textView7"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView6" />

        </RelativeLayout>

    </GridLayout>

    <RelativeLayout
        android:layout_width="374dp"
        android:layout_height="289dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Illia Kuchko&apos;s Friend Space (Top 8)"
            android:id="@+id/textView9"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@color/colorAccent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_marginLeft="5dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView8"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginLeft="5dp"
                android:layout_columnSpan="2"
                android:background="@color/colorPrimary"
                android:layout_gravity="fill_horizontal"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView11"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView12"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView2"
                android:layout_row="1"
                android:layout_column="0"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_columnSpan="2" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView4"
                android:layout_row="1"
                android:layout_column="2"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView5"
                android:layout_row="1"
                android:layout_column="3"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView13"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView14"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView15"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView16"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView6"
                android:layout_row="3"
                android:layout_column="0"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView7"
                android:layout_row="3"
                android:layout_column="1"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView8"
                android:layout_row="3"
                android:layout_column="2"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView9"
                android:layout_row="3"
                android:layout_column="3"
                android:src="@drawable/profile"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
